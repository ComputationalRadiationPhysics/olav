material elbe_screen_material
{
	technique
	{
		pass
		{
			lighting on
			colour_write on
			cull_hardware none
			scene_blend alpha_blend 
			depth_check on
       		depth_write on			
			ambient 0.5 0.86 0.86 0.5
            diffuse 0.5 0.86 0.86 0.5	
		}
	}
}

material elbe_map
{
	technique
	{
		pass{
		
			lighting off
			depth_check off
       		depth_write off	
			scene_blend alpha_blend 
			texture_unit
			{
				texture "elbe map.png"
			}
		}
	}

}